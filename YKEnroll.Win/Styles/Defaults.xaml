<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=netstandard">


    <!-- Font sizes -->
    <sys:Double x:Key="FontSizeNormal">13</sys:Double>
    <sys:Double x:Key="FontSizeHeader1">14</sys:Double>
    <sys:Double x:Key="FontSizeHeader2">17</sys:Double>
    
    <!--<Style x:Key="DefaultComboBox" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}"/>-->
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource Styled.ComboBox}"/>
    <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource Styled.AccentCheckBox}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Styled.Button}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource Styled.AccentTextBox}"/>
    <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource Styled.ToggleButton}"/>
    <Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource Styled.AccentGroupBox}"/>
</ResourceDictionary>